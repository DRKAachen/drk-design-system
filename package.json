{
  "name": "@drkaachen/design-system-ui",
  "version": "1.0.0",
  "description": "DRK shared UI design system for Next.js projects",
  "private": false,
  "license": "UNLICENSED",
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": "./index.ts",
    "./components/Button/Button": "./components/Button/Button.tsx",
    "./components/*": "./components/*",
    "./components/*/*": "./components/*/*",
    "./styles/*": "./styles/*",
    "./lib/*": "./lib/*"
  },
  "files": [
    "components",
    "styles",
    "lib",
    "index.ts",
    "templates"
  ],
  "workspaces": [
    "packages/*",
    "showcase"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DRKAachen/drk-design-system.git"
  },
  "homepage": "https://github.com/DRKAachen/drk-design-system#readme",
  "bugs": {
    "url": "https://github.com/DRKAachen/drk-design-system/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@fontsource/merriweather": "^5.2.11",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/sanitize-html": "^2.16.0",
    "sass": "^1.77.0",
    "typescript": "^5.6.0",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typecheck:workspaces": "npm run typecheck --workspaces --if-present",
    "test": "vitest run",
    "test:workspaces": "npm run test --workspaces --if-present"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
